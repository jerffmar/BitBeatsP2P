{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "client/src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "client/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
